<header class="sticky-top">
  <nav class="navbar navbar-expand-sm navbar-dark bg-success">
    <div class="container-fluid">
      <%= link_to 'chat-app', root_path, class: 'navbar-brand' %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'ダイレクトチャットを作成', users_path, class: "nav-link #{'active' if current_page?(users_path)}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'チャット一覧', rooms_path, class: "nav-link #{'active' if controller.controller_name == 'rooms'}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'アカウント編集', edit_user_registration_path,
                class: "nav-link #{'active' if current_page?(edit_user_registration_path)}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to '新規登録', new_user_registration_path, class: "nav-link #{'active' if current_page?(new_user_registration_path)}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_user_session_path, class: "nav-link #{'active' if current_page?(new_user_session_path)}" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
