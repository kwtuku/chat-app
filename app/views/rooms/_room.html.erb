<%= link_to room_path(room) do %>
  <div class="card-body border-bottom">
    <div class="row">
      <div class="col-2">
        <% if room.direct_chat? %>
          <%= other_user_avatar(room.users) %>
        <% else %>
          <img src="https://placehold.jp/300x300.png" class="img-fluid rounded-circle">
        <% end %>
      </div>
      <div class="col-8 align-self-center">
        <p class="mb-0"><%= room.name %></p>
      </div>
    </div>
  </div>
<% end %>
